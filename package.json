{
  "name": "trustseal-icp",
  "version": "1.0.0",
  "description": "TrustSeal ICP - Decentralized Credential Verification dApp for WCHL 2025",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "start": "webpack serve --mode development --env development",
    "deploy:local": "dfx deploy --network local",
    "deploy:ic": "./deploy.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/ --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "zkp:demo": "node src/zkp_worker/zkp_generator.js",
    "health-check": "dfx canister call trustseal_backend healthCheck --network ic",
    "stats": "dfx canister call trustseal_backend getStatistics --network ic"
  },
  "keywords": ["icp", "dfinity", "nft", "credentials", "blockchain", "zkp", "verification", "wchl2025"],
  "author": "TrustSeal Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hibakhalidm/TrustSeal-ICP.git"
  },
  "bugs": {
    "url": "https://github.com/hibakhalidm/TrustSeal-ICP/issues"
  },
  "homepage": "https://github.com/hibakhalidm/TrustSeal-ICP#readme",
  "devDependencies": {
    "@dfinity/agent": "^0.19.3",
    "@dfinity/auth-client": "^0.19.3",
    "@dfinity/candid": "^0.19.3",
    "@dfinity/principal": "^0.19.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.6.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "html-webpack-plugin": "^5.5.3",
    "ts-loader": "^9.4.4",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3"
  },
  "dependencies": {
    "@dfinity/agent": "^0.19.3",
    "@dfinity/auth-client": "^0.19.3",
    "@dfinity/candid": "^0.19.3",
    "@dfinity/principal": "^0.19.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/setupTests.ts"],
    "testMatch": [
      "**/__tests__/**/*.(ts|tsx|js)",
      "**/*.(test|spec).(ts|tsx|js)"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "react/react-in-jsx-scope": "off",
      "@typescript-eslint/no-explicit-any": "warn"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
}
